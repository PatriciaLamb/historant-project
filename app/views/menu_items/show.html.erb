<div class="container">
  <div class="card-showpage my-4">
    <%= cl_image_tag @menu_item.photo.key%>
    <div class="card-showpage-infos">
      <div class= "d-flex justify-content-between">
        <h2><%= @menu_item.name %></h2>
        <div class= "icons">
          <%= link_to edit_menu_item_path(@menu_item), class: "text-decoration-none text-dark" do %>
            <i class="fa-regular fa-pen-to-square"></i>
          <% end %>
          <%= link_to menu_item_path(@menu_item), class: "text-decoration-none text-dark",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
      </div>
      <p><em>from&nbsp<%=@menu_item.place.name %></em></p>
    </div>

    <div class="row card-showpage-infos">
      <div class= "col-6">
        <p><strong>Category:</strong></p>
        <p><em><%= @menu_item.category %></em></p>
      </div>
      <div class= "col-6">
        <p><strong>Visited on:</strong></p>
        <p><em><%= @menu_item.visit_date.strftime("%e %b %Y") %></em></p>
      </div>
    </div>

    <div class="row card-showpage-infos">
      <div class= "col-6">
        <p><strong>Rating:</strong></p>
        <p>
          <% @menu_item.rating.times do %>
            <i class="fa-solid fa-star"></i>
          <% end %>
          <% (5 - @menu_item.rating).times do %>
            <i class="fa-regular fa-star"></i>
          <% end %>
        </p>
      </div>
      <div class= "col-6">
        <p><strong>Price:</strong></p>
        <p><em><%= @menu_item.price %>â‚¬</em></p>
      </div>
    </div>
    <div class="card-review">
      <p><strong>Review:</strong></p>
      <p><em><%= @menu_item.description %></em></p>
    </div>
    <div class="card-end">
      <a href="/dashboard" class="btn btn-ghost" role="button">Go to dashboard</a>
    </div>
  </div>

